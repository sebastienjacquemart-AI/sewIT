{
  "name": "student-services-backend",
  "version": "1.0.0",
  "description": "Backend API for Student Services Marketplace",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:auth": "NODE_ENV=test jest auth.test.js --detectOpenHandles",
    "test:services": "NODE_ENV=test jest services.test.js --detectOpenHandles", 
    "test:vendor": "NODE_ENV=test jest vendor.test.js --detectOpenHandles",
    "test:bookings": "NODE_ENV=test jest bookings.test.js --detectOpenHandles",
    "test:integration": "NODE_ENV=test jest integration.test.js --detectOpenHandles",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["<rootDir>/tests/**/*.test.js"],
    "testTimeout": 10000
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
