{
  "name": "student-services-backend",
  "version": "1.0.0",
  "description": "Backend API for student services marketplace",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:auth": "NODE_ENV=test jest tests/auth.test.js --detectOpenHandles --forceExit",
    "test:services": "NODE_ENV=test jest tests/services.test.js --detectOpenHandles --forceExit",
    "test:bookings": "NODE_ENV=test jest tests/bookings.test.js --detectOpenHandles --forceExit",
    "test:vendor": "NODE_ENV=test jest tests/vendor.test.js --detectOpenHandles --forceExit",
    "test:integration": "NODE_ENV=test jest tests/integration.test.js --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --detectOpenHandles"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "server.js",
      "!node_modules/**"
    ]
  },
  "keywords": [
    "student",
    "services",
    "marketplace",
    "api",
    "backend"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}